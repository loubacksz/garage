#!/usr/bin/env node

// BECAUSE I INSERTED JAVASCRIPT CODE ON THIS FILE THAT DIDN'T HAVE AN EXTENSION
// IT BECAME A JS FILE LIKE WWW WITHOU THE .js

/**
 * Module dependencies.
 */

const app = require('../app');

// SET DEBUG=helloworld:* & npm start 
// Creates an environment variable telling the debug library to print all messages that start with helloworld:
// And then runs the next command - npm start
const debug = require('debug')('helloworld:server');
const http = require('http');

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

// create a raw HTTP server that will use the Express app as the request handler
// "Whenever an HTTP request arrives, give it to the Express app to handle"
const server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

// start the http server listening for connections
server.listen(port);
server.on('error', onError); // server extends the net.Server Class that extends the EventEmitter Class - thats why we can listen to events
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    const port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    console.log(error);
    if (error.syscall !== 'listen') {
        throw error;
    }

    const bind = typeof port === 'string'
        ? 'Pipe ' + port
        : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    const addr = server.address();
    const bind = typeof addr === 'string'
        ? 'pipe ' + addr
        : 'port ' + addr.port;
    debug('Listening on ' + bind);
}
